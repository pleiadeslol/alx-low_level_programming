#include "main.h"
#include <stdio.h>

/**
 * print_square - function that prints a square
 *
 * @size: size of the square
 *
 * Return: always 0
 */

void print_square(int size)
{
	int i;

	if (size <= 0)
	{
		_putchar('\n');
	}
	else
	{
		for (i = 0; i < size; i++)
		{
			while (i < size)
			{
				_putchar('#');
				_putchar('\n');
			}
		}
	}
}
